<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_category_bg"
    android:layout_height="95dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent">

    <View
        android:id="@+id/viewBorder"
        android:background="@color/colorCircleImageBg"
        android:layout_height="wrap_content"
        android:layout_width="4dp" />

    <LinearLayout
        android:id="@+id/relCategory"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/viewBorder"
        android:layout_toRightOf="@+id/viewBorder"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCategoryTitle"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="SubCategory"
                android:textColor="@color/colorCategoryTitle"
                android:textSize="16dp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/subimage"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_right" />

    </LinearLayout>

</RelativeLayout>